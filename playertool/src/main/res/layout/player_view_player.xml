<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/player_view_player"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:orientation="vertical">

    <!--播放器-->
    <com.fly.playertool.widget.IjkVideoView
        android:id="@+id/player_view_player_video_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <!-- 封面显示-->
    <ImageView
        android:id="@+id/player_view_player_iv_cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:visibility="visible" />

    <!--重新播放-->
    <LinearLayout
        android:id="@+id/player_view_player_replay_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#33000000"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">
        <!-- 播放状态-->
        <TextView
            android:id="@+id/player_view_player_replay_status_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/small_problem"
            android:textColor="@android:color/white"
            android:textSize="14dp" />

        <!--重新播放按钮-->
        <ImageView
            android:id="@+id/player_view_player_replay_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/player_circle_retry" />
    </LinearLayout>

    <!-- 网络提示-->
    <LinearLayout
        android:id="@+id/player_view_player_netTie"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#33000000"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="您正在使用移动网络播放视频\n可能产生较高流量费用"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/player_view_player_netTie_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/network_hints"
            android:gravity="center"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="继续"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <!-- 最大试看时长提示-->
    <LinearLayout
        android:id="@+id/player_view_player_video_freeTie"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#33000000"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="试看时间已到请购买继续观看"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/player_view_player_video_freeTie_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="购买"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <!--加载中-->
    <LinearLayout
        android:id="@+id/player_view_player_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:indeterminateBehavior="repeat"
            android:indeterminateOnly="true" />

        <TextView
            android:id="@+id/player_view_player_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:text="188Kb/s"
            android:textColor="@android:color/white"
            android:visibility="gone" />
    </LinearLayout>

    <!-- 中间触摸提示-->
    <include
        layout="@layout/player_touch_gestures"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <!-- 顶部栏-->
    <com.fly.playertool.view.PlayerTopView
        android:id="@+id/player_view_player_play_top_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <!-- 底部栏-->
    <com.fly.playertool.view.PlayerBottomView
        android:id="@+id/player_view_player_play_bottom_view"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <!--分辨率 （高清、标清） 选择  从右边滑出-->
    <com.fly.playertool.view.PlayerLineView
        android:id="@+id/player_view_player_play_line_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <!--中间的播放标记-->
    <ImageView
        android:id="@+id/player_view_player_center_icon"
        android:contentDescription="@string/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="8dp"
        android:src="@drawable/player_center_play" />

</RelativeLayout>
