<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/video_view_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ff00ff"
        tools:context=".MainActivity"
        tools:ignore="UselessParent">

        <com.fly.playertool.widget.IjkVideoView
            android:id="@+id/video_view"
            android:background="#ff0000"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!-- 顶部栏-->
        <com.fly.playertool.view.PlayerTopView
            android:id="@+id/player_view_player_play_top_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- 底部栏-->
        <com.fly.playertool.view.PlayerBottomView
            android:id="@+id/player_view_player_play_bottom_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>
</RelativeLayout>

